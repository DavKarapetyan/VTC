<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VTC</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/navigation.min.css" />
    <link rel="stylesheet" href="~/VTC.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <link rel='stylesheet prefetch' href='https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css'>

    @await RenderSectionAsync("header", required: false)
</head>
<body>
      <header>
        <div class="navigation-wrap bg-white start-style">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <nav class="navbar navbar-expand-md navbar-light py-0">
                            <a class="navbar-brand" asp-action="Index">
                                <img src="~/image/logo.png" alt="">
                            </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav ml-auto py-4 py-md-0">
                                    <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-5 active">
                                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Trainings</a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-action="TrainingsList">Trainings</a>
                                            <a class="dropdown-item" asp-action="#">Students trainings</a>
                                            <a class="dropdown-item" asp-action="#">USAID</a>
                                        </div>
                                    </li>
                                    <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-5">
                                        <a class="nav-link" asp-action="Service">Services</a>
                                    </li>
                                    <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-5">
                                        <a class="nav-link" asp-action="News">News</a>
                                    </li>
                                    <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-5">
                                        <a class="nav-link" asp-action="Events">Events</a>
                                    </li>
                                    <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-5">
                                        <a class="nav-link" asp-action="AboutUs">About Us </a>
                                    </li>
                                    <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-5 active">
                                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Languge</a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="#">Armenian</a>
                                            <a class="dropdown-item" href="#">English</a>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <div>
        <img class="footer-img" src="~/image/footer.png" />
    </div>
    <footer class="border-top footer text-muted mt-150" style="display: none">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-12 text-md-left text-center">
                    <img class="img-fluid footer-logo d-md-block d-none" alt="Wolrd Bank" src="~/image/wbg.png" />
                    <img class="img-fluid footer-logo d-md-block d-none" alt="Wolrd Bank" src="~/image/ra.png" />
                    <img class="img-fluid footer-logo d-md-block d-none" alt="Wolrd Bank" src="~/image/eif.png" />
                    <img class="img-fluid footer-logo d-md-block d-none" alt="Wolrd Bank" src="~/image/vtc.png" />
                    <img class="img-fluid footer-logo d-md-none d-inline-block" alt="Wolrd Bank" src="~/image/wbg_mobile.png" />
                    <img class="img-fluid footer-logo d-md-none d-inline-block" alt="Wolrd Bank" src="~/image/ra_mobile.png" />
                    <img class="img-fluid footer-logo d-md-none d-inline-block" alt="Wolrd Bank" src="~/image/eif_mobile.png" />
                    <img class="img-fluid footer-logo d-md-none d-inline-block" alt="Wolrd Bank" src="~/image/vtc_mobile.png" />
                </div>
                <div class="col-md-5 col-12 info">
                    <a href="https://goo.gl/maps/8PdYsr6uo88on3We6" target="_blank"><span><i class="fas fa-map-marker-alt"></i></span>Vanadzor Shinararner str. 12</a>
                    <a href="tel:060749700"><span><i class="fas fa-phone-alt"></i></span>060 749700</a>
                    <a href="mailto:info@vtc.am"><span><i class="fas fa-envelope"></i></span>info@vtc.am</a>
                    <div class="row social">
                        <div class="col-7 mb-md-0 mb-4">
                            <a target="_blank" href="https://www.facebook.com/VanadzorTechnologyCenter"><i class="fab fa-facebook-f"></i></a>
                            <a target="_blank" href="https://www.instagram.com/vanadzor_technology_center/"><i class="fab fa-instagram"></i></a>
                            <a target="_blank" href="https://www.youtube.com/channel/UCUTZlO8VjhE0ZjONyeTdDoQ"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-12">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3020.4022051409115!2d44.520081814507556!3d40.79715464034013!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4041bbe8116cffd3%3A0x7b3461102da5ad34!2sVanadzor%20Technological%20Center%20(VTC)!5e0!3m2!1sru!2s!4v1648492793147!5m2!1sru!2s" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>

        <div class="container creators">
            <div class="row">
                <div class="col-md-6 text-left">
                    <p>Vanadzor Technology Center <i class="fas fa-copyright"></i> 2022</p>
                </div>
                <div class="col-md-6 text-md-right">
                    <p>Made with <i class="fas fa-heart"></i> by VTC Students </p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js" asp-append-version="true"></script>
    <script src="~/js/owl-carousel.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
