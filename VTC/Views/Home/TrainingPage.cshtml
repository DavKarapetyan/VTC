<section class="register">
    <div class="container">
        <div class="row">
            <div class="col-md-7 col-12">
                <p class="section-desc fs-30">For course registration fill this fields</p>
                <img class="img-fluid" src="~/image/register.png" alt="register" />
            </div>
            <div class="col-md-5 col-12">
                <form>
                    <div class="row">
                        <div class="col-md-6 col-12">
                            <input placeholder="First name" class="reg-input" type="text" autocomplete="off" />
                        </div>
                        <div class="col-md-6 col-12">
                            <input placeholder="Last name" class="reg-input" type="text" autocomplete="off" />
                        </div>
                        <div class="col-md-12 col-12">
                            <input placeholder="Email" class="reg-input" type="email" autocomplete="off" />
                        </div>
                        <div class="col-md-12 col-12">
                            <input placeholder="Phone" class="reg-input" type="tel" autocomplete="off" />
                        </div>
                        <div class="col-md-12 col-12">
                            <input placeholder="Address" class="reg-input" type="text" autocomplete="off" />
                        </div>
                        <div class="col-md-12 col-12">
                            <input placeholder="Age" class="reg-input mb-2" type="text" autocomplete="off" />
                            <small>The course is open to 16 year olds</small>
                        </div>
                        <div class="col-12">
                            <p class="secont-stage">Phase (the second stage is open to those who know the main topics of the first stage)</p>
                        </div>
                        <div class="col-md-6 col-12">
                            <input class="input-radio" type="radio" id="courseFirstStage" name="courseStage" value="1">
                            <label for="courseFirstStage">course first stage</label><br>
                        </div>
                        <div class="col-md-6 col-12">
                            <input class="input-radio" type="radio" id="courseSecondStage" name="courseStage" value="2">
                            <label for="courseSecondStage">course second stage</label><br>
                        </div>
                        <div class="col-12 aggree">
                            <input class="input-radio i_aggree" type="checkbox" id="aggrement" name="aggrement">
                            <label for="aggrement">I hereby express my consent for the Enterprise Incubator Foundation to collect, process and use the personal data provided by me within the framework of the announced trainings, processes, and related documentation.</label><br>
                        </div>
                        <div class="col-12 text-left">
                            <button type="submit" class="btn btn-yellow" disabled>Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>