@using Microsoft.AspNetCore.Mvc.Localization
 
@inject IViewLocalizer Localizer
@section header{
    <link rel="stylesheet" href="~/css/home.min.css" />
}

<section class="page-header header-filter clear-filter" data-parallax="true">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ml-auto mr-auto">
                <div class="brand">
                    <h1 class="page-title fs-64">@Localizer["Header"]</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section-paddings">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-7 col-12 order-md-1 order-2">
                <p class="section-desc fs-24">@Localizer["About1"]</p>
            </div>
            <div class="col-lg-6 col-md-5 col-12 order-md-2 order-1 text-md-right text-center">
                <img src="~/image/img-1.png" alt="Vanadzor Technology Center" class="section-img img-fluid" />
            </div>
        </div>
    </div>
</section>
<section class="section-paddings">
