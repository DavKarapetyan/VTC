@model TrainingViewModel

@{
    var text = ((Model != null) ? "Edit Training" : "Add Training");
}

<div class="modal-content">
    <form asp-action="ManageTraining" asp-controller="Admin">
        <input hidden value="@((Model != null) ? Model.Id : 0)" />
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">@text</h5>

        </div>
        <div class="modal-body">
            <div class="input-group mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="input-group mb-3">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="input-group mb-3">
                <label asp-for="Status"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<TrainingStatus>()" class="form-select">
                    <option selected="selected" value="">Please select</option>
                </select>
            </div>
            <div class="input-group mb-3">
                <label asp-for="Type"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<TrainingType>()" class="form-select">
                    <option selected="selected" value="">Please select</option>
                </select>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    </form>
</div>
