@model List<ServiceViewModel>
@{
    Layout = "_AdminLayout";
}
<a asp-controller="Admin" asp-action="ManageService" data-bs-toggle="modal" data-bs-target="#dialogDiv" class="btn btn-success open-modal">Add</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a asp-controller="Admin" asp-action="ManageService" asp-route-id="@item.Id" data-bs-toggle="modal" data-bs-target="#dialogDiv" class="btn btn-success open-modal">Edit</a>
                    <a asp-controller="Admin" asp-action="DeleteService" asp-route-id="@item.Id" data-bs-toggle="modal" data-bs-target="#dialogDiv" class="btn btn-danger open-modal">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>